<?xml version="1.0"?>
<!-- Game settings -->

<settings>
  <game name="Lizard Wizard" />
  <renderer width="1024" height="768"/>
   
  <font file="Media\Fonts\AverageSans_24.spritefont"/>

  <!-- textures -->
   
  <textures path="Media\Textures">
    <texture name="test" file="test.dds"/>
    <texture name="sample" file="sample.dds"/>
    <texture name="white" file="white.dds"/>
  </textures>

  <!-- sounds -->
  
  <sounds path="Media\Sounds">
    <sound name="clang" file="clang.wav" instances="8"/>
    <sound name="grunt" file="umph.wav" instances="8"/>
    <sound name="impact" file="impact.wav" instances="8"/>
    <sound name="FireCast" file="FireCast.wav" instances="16"/>
    <sound name="IceCast" file="IceCast.wav" instances="16"/>
    <sound name="LightningCast" file="LightningCast.wav" instances="16"/>
    <sound name="FireImpact1" file="FireImpact1.wav" instances="24"/>
    <sound name="IceImpact1" file="IceImpact1.wav" instances="24"/>

  </sounds>

  <!-- models -->

  <models path="Media\Models">
    <model name="cube" file="cube.vbo"/>
    <model name="suzanne" file="suzanne.vbo"/>
    <model name="obelisk" file="obelisk.vbo"/>
    <model name="sentry" file="sentry.vbo"/>
    <model name="staff" file="staff.vbo"/>
    <model name="hand" file="hand.vbo"/>
    <model name="quad" file="quad.vbo"/>
  </models>
</settings>
